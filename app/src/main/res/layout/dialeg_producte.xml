<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/dialog_bg"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/dialogNomProducte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom del producte"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center" />

    <ImageView
        android:id="@+id/dialogImatge"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginVertical="8dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/dialogDescripcio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripció del producte"
        android:textAlignment="center"
        android:layout_marginVertical="8dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btnRestar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/baseline_horizontal_rule_24" />

        <EditText
            android:id="@+id/txtQuantitat"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="1"
            android:gravity="center" />

        <ImageView
            android:id="@+id/btnSumar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/baseline_add_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialogPreu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.99€"
            android:textSize="16sp"
            android:layout_marginEnd="60dp"
            android:layout_marginVertical="8dp" />

        <Button
            android:id="@+id/btnAfegirEncàrrec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Afegir" />

    </LinearLayout>

</LinearLayout>
